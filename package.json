{
  "name": "helperize",
  "version": "0.1.0",
  "description": "A set of helper functions and utilities",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "repository": "github:piaseckijulian/Helperize",
  "scripts": {
    "build": "tsup",
    "lint": "eslint .",
    "lint:tsc": "tsc",
    "test": "vitest run",
    "test:ui": "vitest --ui",
    "coverage": "vitest run --coverage",
    "format": "prettier . -w",
    "format:check": "prettier . -c",
    "prepare": "husky"
  },
  "keywords": [
    "helperize",
    "utilities",
    "functions"
  ],
  "author": "Julian Piasecki",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^19.2.2",
    "@commitlint/config-conventional": "^19.2.2",
    "@types/node": "^20.12.7",
    "@typescript-eslint/eslint-plugin": "^7.7.0",
    "@typescript-eslint/parser": "^7.7.0",
    "@vitest/coverage-v8": "^1.5.0",
    "@vitest/ui": "^1.5.0",
    "eslint": "^8.57.0",
    "husky": "^9.0.11",
    "prettier": "^3.2.5",
    "tsup": "^8.0.2",
    "typescript": "^5.4.5",
    "vitest": "^1.5.0"
  },
  "dependencies": {
    "clipboardy": "^4.0.0"
  }
}