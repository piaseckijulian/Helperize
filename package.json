{
  "name": "helperize",
  "version": "0.1.1",
  "description": "A set of helper functions and utilities",
  "main": "dist/index.js",
  "type": "module",
  "repository": "github:piaseckijulian/Helperize",
  "scripts": {
    "build": "tsc",
    "lint": "prettier . --check && eslint .",
    "format": "prettier . --write",
